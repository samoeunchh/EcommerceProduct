@model IEnumerable<EcommerceProduct.Models.ExchangeRate>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IssueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Currency)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IssueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currency.CategoryName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ExchangeRateId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ExchangeRateId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ExchangeRateId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
